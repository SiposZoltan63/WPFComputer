<Window x:Class="feladat0321.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:feladat0321"
        mc:Ignorable="d"
        Title="Számítógép bolt" Height="315" Width="620">
    <Grid Background="#FF0917E6">
        <Menu Height="300" Width="600" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Margin="10,0,0,0">
            <MenuItem Header="Számítógépek" Name="computer" Width="119" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Computer_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFD1D3D6" Offset="1"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem Header="Operációs rendszerek" Name="Ops" Height="40" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Ops_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFD9DBE2" Offset="1"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <DataGrid x:Name="DataGrid1" Width="495" HorizontalAlignment="Center" VerticalAlignment="Center" Height="157" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FFF9F6F6"/>
        </Menu>
    </Grid>
</Window>
