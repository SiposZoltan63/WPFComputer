<Window x:Class="feladat0321.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:feladat0321"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="#FF002B94">
        <TextBox x:Name="textbox1" HorizontalAlignment="Center" Margin="0,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBox x:Name="textbox2" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <Button Content="Regisztrlás" HorizontalAlignment="Center" Margin="0,243,0,0" VerticalAlignment="Top" Height="54" Width="191" FontSize="20" FontFamily="Gill Sans Ultra Bold" Foreground="#FF16FF24">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Felhasználó név:" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Foreground="#FF1EF300" FontSize="20" FontWeight="Bold" FontFamily="Arial Black"/>
        <Label Content="Jelszó" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" Foreground="#FF04DC11" FontSize="20" FontWeight="Bold" FontFamily="Arial Black"/>
    </Grid>
</Window>
